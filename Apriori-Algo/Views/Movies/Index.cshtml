@model IEnumerable<Apriori_Algo.Models.Movie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/myLayout.cshtml";
}
<link rel="stylesheet" href="~/css/view.css" />


<section>
    <!--for demo wrap-->
    <h1>Movies</h1>
    <div class="tbl-header">
        <table cellpadding="0" cellspacing="0" border="0">
            <thead>
                <tr>
                    <th><center>  @Html.DisplayNameFor(model => model.Name) </center></th>
                    <th><center>  @Html.DisplayNameFor(model => model.Type) </center></th>
                    <th><center>  Actions </center></th>

                </tr>
            </thead>
        </table>
    </div>
    <div class="tbl-content">
        <table cellpadding="0" cellspacing="0" border="0">
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <center>
                                @Html.DisplayFor(modelItem => item.Name)
                            </center>
                        </td>
                        <td>
                            <center> 
                            @Html.DisplayFor(modelItem => item.Type)
                            </center>
                        </td>
                        <td>
                            <center>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |

                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </center>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</section>

<a asp-action="Create" class="btn"><center> Create New</center> </a>